<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.3.xsd">
	<context:annotation-config/>
	<bean id="hong" class="com.test02.Student">
		<constructor-arg value="앨리스"></constructor-arg>
		<constructor-arg value="서울 구로"></constructor-arg>
		<constructor-arg value="100"></constructor-arg>
	</bean>
	
	<bean id="lee" class="com.test02.Student">
		<constructor-arg value="리리"></constructor-arg>
		<constructor-arg value="서울 구로"></constructor-arg>
		<constructor-arg value="100"></constructor-arg>
	</bean>
	<bean id="school" class="com.test02.School">
		<!-- 세터 주입 인데 이게  -->
		<property name="grade" value="1"></property>
	</bean>
	
	

</beans>
